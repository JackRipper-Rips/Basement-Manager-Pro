<UserControl x:Class="SolusManifestApp.Tools.SteamAuthPro.SteamAuthProControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border BorderBrush="{DynamicResource AccentBrush}"
            BorderThickness="1"
            CornerRadius="8"
            Background="{DynamicResource SecondaryDarkBrush}"
            Margin="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20" MaxWidth="700" HorizontalAlignment="Left">
                <!-- Active Account -->
                <GroupBox Header="Active Account" Margin="0,0,0,5">
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Account:" Grid.Column="0" VerticalAlignment="Center"
                                   Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,10,0"/>
                        <ComboBox x:Name="AccountComboBox" Grid.Column="1"
                                  SelectionChanged="AccountComboBox_SelectionChanged"
                                  MinWidth="300"/>
                    </Grid>
                </GroupBox>

                <!-- App ID -->
                <GroupBox Header="App ID" Margin="0,0,0,5">
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Enter Steam App ID:" Grid.Column="0" VerticalAlignment="Center"
                                   Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,10,0"/>
                        <TextBox x:Name="AppIdTextBox" Grid.Column="1"
                                 Margin="0,0,10,0"
                                 MinWidth="200"/>
                        <Button Content="ðŸ” Search Game" Grid.Column="2"
                                Click="SearchGameButton_Click"/>
                    </Grid>
                </GroupBox>

                <!-- Usage Limit -->
                <GroupBox Header="Usage Limit" Margin="0,0,0,5">
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Select usage limit:" Grid.Column="0" VerticalAlignment="Center"
                                   Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,10,0"/>
                        <ComboBox x:Name="UsageLimitComboBox" Grid.Column="1"
                                  SelectedIndex="0"
                                  MinWidth="150"/>
                    </Grid>
                </GroupBox>

                <!-- Generate Button -->
                <Button x:Name="GenerateButton"
                        Content="Generate Auth Code"
                        Height="40"
                        FontSize="13"
                        Click="GenerateButton_Click"
                        Margin="0,0,0,5"/>

                <!-- Result -->
                <GroupBox Header="Result">
                    <StackPanel Margin="5">
                        <TextBlock x:Name="StatusLabel" Text="Ready"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   Margin="0,0,0,5"/>

                        <TextBlock x:Name="AuthCodeDisplay"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource AccentBrush}"
                                   MinHeight="30"
                                   Margin="0,0,0,5"/>

                        <TextBox x:Name="InfoTextBox"
                                 IsReadOnly="True"
                                 TextWrapping="Wrap"
                                 MinHeight="90"
                                 MaxHeight="110"
                                 VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>
