<UserControl x:Class="SolusManifestApp.Views.FixInstallerPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Fix Installer"
                   FontSize="32"
                   FontWeight="Bold"
                   Foreground="{DynamicResource TextPrimaryBrush}"
                   Margin="0,0,0,30"/>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel MaxWidth="900" HorizontalAlignment="Left">

                <!-- Fix History -->
                <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Fix History"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   Margin="0,0,0,15"/>

                        <TextBlock Text="Select from previously fixed games"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   Margin="0,0,0,5"/>

                        <ComboBox ItemsSource="{Binding FixHistory}"
                                  SelectedItem="{Binding SelectedHistoryItem}"
                                  FontSize="14"
                                  Padding="10,8">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                </Border>

                <!-- Game Information -->
                <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Game Information"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   Margin="0,0,0,15"/>

                        <TextBlock Text="Steam App ID"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   Margin="0,0,0,5"/>
                        <TextBox Text="{Binding AppId, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="10,8"
                                 FontSize="14"
                                 Margin="0,0,0,15"/>

                        <TextBlock Text="{Binding GameName}"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource AccentBrush}"
                                   Margin="0,0,0,15"/>

                        <TextBlock Text="Game Install Path"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   Margin="0,0,0,5"/>
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0"
                                     Text="{Binding InstallPath, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="10,8"
                                     FontSize="14"
                                     Margin="0,0,10,0"/>
                            <Button Grid.Column="1"
                                    Content="Browse"
                                    Command="{Binding BrowseInstallPathCommand}"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Padding="20,8"/>
                        </Grid>

                        <StackPanel Orientation="Horizontal">
                            <Button Content="Check for Fix"
                                    Command="{Binding CheckForFixCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Padding="30,10"
                                    Margin="0,0,10,0"/>
                            <Button Content="Get App Info"
                                    Command="{Binding GetAppInfoCommand}"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Padding="30,10"
                                    ToolTip="Get game info and install path for local fix files (without checking server)"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Fix Actions -->
                <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Fix Actions"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   Margin="0,0,0,15"/>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <Button Content="Apply Fix from URL"
                                    Command="{Binding ApplyFromUrlCommand}"
                                    IsEnabled="{Binding IsApplyFromUrlEnabled}"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Padding="30,10"
                                    Margin="0,0,10,0"/>
                            <Button Content="Apply Fix from File"
                                    Command="{Binding ApplyFromFileCommand}"
                                    IsEnabled="{Binding IsApplyFromFileEnabled}"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Padding="30,10"
                                    Margin="0,0,10,0"/>
                            <Button Content="Unfix"
                                    Command="{Binding UnfixCommand}"
                                    IsEnabled="{Binding IsUnfixEnabled}"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Padding="30,10"
                                    ToolTip="Remove the applied fix and restore original files"/>
                        </StackPanel>

                        <TextBlock Text="{Binding StatusMessage}"
                                   Foreground="{DynamicResource AccentBrush}"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Information -->
                <Border Style="{StaticResource ModernCardStyle}">
                    <StackPanel>
                        <TextBlock Text="How to Use"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   Margin="0,0,0,15"/>

                        <TextBlock TextWrapping="Wrap"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   LineHeight="22">
                            <Run Text="1. Enter the Steam App ID of the game you want to fix."/>
                            <LineBreak/>
                            <Run Text="2. Click 'Check for Fix' to check if a fix is available from the server, OR click 'Get App Info' to get game information for local fix files."/>
                            <LineBreak/>
                            <Run Text="3. The install path will be auto-detected if possible. If not, browse to the game's install folder."/>
                            <LineBreak/>
                            <Run Text="4. Click 'Apply Fix from URL' to download and apply the fix from the server, OR 'Apply Fix from File' to apply a local fix file."/>
                            <LineBreak/>
                            <Run Text="5. If a fix is already applied, you can click 'Unfix' to restore the original files."/>
                            <LineBreak/>
                            <LineBreak/>
                            <Run Text="Note: All original files are backed up before applying fixes and can be restored with the 'Unfix' button."/>
                            <LineBreak/>
                            <Run Text="Note: A server address must be input in settings in order to check for and apply fixes from a server."/>
                            <LineBreak/>
                            <Run Text="Fix logs are stored as 'basement-fix-log-{appid}.log' in the game's install directory."/>
                        </TextBlock>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
