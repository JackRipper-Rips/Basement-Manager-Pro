<UserControl x:Class="SolusManifestApp.Views.LibraryPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:models="clr-namespace:SolusManifestApp.Models">
    <Grid Margin="30"
          AllowDrop="True"
          Drop="Grid_Drop"
          DragEnter="Grid_DragEnter"
          DragLeave="Grid_DragLeave">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header + Stats -->
            <RowDefinition Height="Auto"/>
            <!-- Search and Filters -->
            <RowDefinition Height="Auto"/>
            <!-- Batch Actions Bar -->
            <RowDefinition Height="*"/>
            <!-- Content -->
        </Grid.RowDefinitions>

        <!-- Header with Statistics -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Library"
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="{DynamicResource TextPrimaryBrush}"/>

                <!-- Statistics Dashboard -->
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <!-- Lua Card (Lua/SteamTools Mode) -->
                    <Border Background="{DynamicResource CardBackgroundBrush}"
                            Padding="15,10"
                            CornerRadius="8"
                            Margin="0,0,10,0"
                            Visibility="{Binding IsGreenLumaMode, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                        <StackPanel>
                            <TextBlock Text="{Binding TotalLua}"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource AccentBrush}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Lua"
                                       FontSize="12"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- GreenLuma Card (GreenLuma Mode) -->
                    <Border Background="{DynamicResource CardBackgroundBrush}"
                            Padding="15,10"
                            CornerRadius="8"
                            Margin="0,0,10,0"
                            Visibility="{Binding IsGreenLumaMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <TextBlock Text="{Binding TotalGreenLuma}"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource AccentBrush}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="GreenLuma Games"
                                       FontSize="12"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border Background="{DynamicResource CardBackgroundBrush}"
                            Padding="15,10"
                            CornerRadius="8"
                            Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="{Binding TotalSteamGames}"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource AccentBrush}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Steam Games"
                                       FontSize="12"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border Background="{DynamicResource CardBackgroundBrush}"
                            Padding="15,10"
                            CornerRadius="8">
                        <StackPanel>
                            <TextBlock FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource AccentBrush}"
                                       HorizontalAlignment="Center">
                                <TextBlock.Text>
                                    <Binding Path="TotalSize" Converter="{StaticResource BytesToStringConverter}"/>
                                </TextBlock.Text>
                            </TextBlock>
                            <TextBlock Text="Total Size"
                                       FontSize="12"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                <Button Content="ðŸ”„ Refresh"
                        Command="{Binding RefreshLibraryCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Margin="0,0,10,0"/>
                <Button Content="â¬‡ Auto-Update Enabler"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Command="{Binding EnableAutoUpdatesCommand}"
                        Margin="0,0,10,0"
                        ToolTip="Comment out all setManifestid lines to enable auto-updates (SteamTools mode only)"
                        Visibility="{Binding IsSteamToolsMode, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <Button Content="ðŸ”„ Restart Steam"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Command="{Binding RestartSteamCommand}"/>
            </StackPanel>
        </Grid>

        <!-- Search and Filters -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Search Box -->
            <TextBox Grid.Column="0"
                     Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                     FontSize="13"
                     Height="46"
                     Padding="12,0"
                     VerticalContentAlignment="Center"
                     Margin="0,0,10,0">
                <TextBox.Resources>
                    <Style TargetType="TextBox" BasedOn="{StaticResource ModernTextBoxStyle}">
                        <Style.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <VisualBrush Stretch="None" AlignmentX="Left" AlignmentY="Center">
                                            <VisualBrush.Visual>
                                                <TextBlock Text="ðŸ” Search by name, App ID, or description..."
                                                           FontSize="13"
                                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                                           Margin="5,0,0,0"
                                                           VerticalAlignment="Center"/>
                                            </VisualBrush.Visual>
                                        </VisualBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <!-- Filter ComboBox -->
            <ComboBox Grid.Column="1"
                      ItemsSource="{Binding FilterOptions}"
                      SelectedItem="{Binding SelectedFilter}"
                      Width="150"
                      Height="28"
                      Margin="0,0,10,0"
                      Padding="8,3"
                      FontSize="12"/>

            <!-- Sort ComboBox -->
            <ComboBox Grid.Column="2"
                      ItemsSource="{Binding SortOptions}"
                      SelectedItem="{Binding SelectedSort}"
                      Width="150"
                      Height="28"
                      Margin="0,0,10,0"
                      Padding="8,3"
                      FontSize="12"/>

            <!-- Select Mode Toggle -->
            <Button Grid.Column="3"
                    Content="â˜‘ Select Mode"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Command="{Binding ToggleSelectModeCommand}"
                    Height="28"
                    Padding="10,3"/>
        </Grid>

        <!-- Batch Actions Bar (Visible in Select Mode) -->
        <Border Grid.Row="2"
                Background="{DynamicResource SecondaryDarkBrush}"
                Padding="15"
                CornerRadius="8"
                Margin="0,0,0,15"
                Visibility="{Binding IsSelectMode, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <Button Content="Select All"
                            Command="{Binding SelectAllCommand}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Padding="12,6"
                            Margin="0,0,10,0"/>
                    <Button Content="Deselect All"
                            Command="{Binding DeselectAllCommand}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Padding="12,6"
                            Margin="0,0,10,0"/>
                    <Button Content="ðŸ—‘ï¸ Uninstall Selected"
                            Command="{Binding UninstallSelectedCommand}"
                            Padding="12,6"/>
                </StackPanel>

                <TextBlock Text="{Binding StatusMessage}"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"/>
            </Grid>
        </Border>

        <!-- Games Grid -->
        <ScrollViewer Grid.Row="3"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <ItemsControl ItemsSource="{Binding DisplayedItems}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource ModernCardStyle}"
                                Width="280"
                                Height="360"
                                Margin="0,0,20,20"
                                Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=UserControl}}">
                            <Border.ContextMenu>
                                <ContextMenu DataContext="{Binding PlacementTarget.Tag, RelativeSource={RelativeSource Self}}">
                                    <MenuItem Header="ðŸ“‹ View Details"
                                              Command="{Binding ShowDetailsCommand}"
                                              CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                    <MenuItem Header="ðŸ“ Open in Explorer"
                                              Command="{Binding OpenInExplorerCommand}"
                                              CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                    <Separator/>
                                    <MenuItem Header="ðŸ—‘ï¸ Uninstall"
                                              Command="{Binding UninstallItemCommand}"
                                              CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                </ContextMenu>
                            </Border.ContextMenu>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="160"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Game Image -->
                                <Border Grid.Row="0"
                                        Background="{DynamicResource SecondaryDarkBrush}"
                                        CornerRadius="8">
                                    <Grid>
                                        <!-- Show cached icon if available -->
                                        <Image Source="{Binding CachedIconPath}"
                                               Stretch="Uniform"
                                               Visibility="{Binding CachedIconPath, Converter={StaticResource NullToVisibilityConverter}}"/>

                                        <!-- Placeholder if no icon -->
                                        <TextBlock Text="ðŸŽ®"
                                                   FontSize="64"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Foreground="{DynamicResource AccentBrush}"
                                                   Visibility="{Binding CachedIconPath, Converter={StaticResource InverseNullToVisibilityConverter}}"/>

                                        <!-- Type Badge -->
                                        <Border Background="{DynamicResource AccentBrush}"
                                                Padding="8,4"
                                                CornerRadius="4"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                Margin="8">
                                            <TextBlock Text="{Binding TypeBadge}"
                                                       FontSize="10"
                                                       FontWeight="Bold"
                                                       Foreground="White"/>
                                        </Border>

                                        <!-- Checkbox for Select Mode -->
                                        <CheckBox IsChecked="{Binding IsSelected}"
                                                  HorizontalAlignment="Left"
                                                  VerticalAlignment="Top"
                                                  Margin="10"
                                                  Visibility="{Binding DataContext.IsSelectMode, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    </Grid>
                                </Border>

                                <!-- Game Info -->
                                <StackPanel Grid.Row="1" Margin="10">
                                    <TextBlock Text="{Binding Name}"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                               TextTrimming="CharacterEllipsis"
                                               TextWrapping="Wrap"
                                               MaxHeight="40"/>

                                    <TextBlock Text="{Binding AppId, StringFormat='App ID: {0}'}"
                                               FontSize="11"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               Margin="0,8,0,0"/>

                                    <TextBlock Text="{Binding SizeFormatted}"
                                               FontSize="11"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               Margin="0,3,0,0"/>

                                    <TextBlock FontSize="11"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               Margin="0,3,0,0"
                                               Visibility="{Binding LastUpdated, Converter={StaticResource NullToVisibilityConverter}}">
                                        <Run Text="Updated:"/>
                                        <Run Text="{Binding LastUpdated, StringFormat='{}{0:yyyy-MM-dd}'}"/>
                                    </TextBlock>
                                </StackPanel>

                                <!-- Actions -->
                                <Button Grid.Row="2"
                                        Content="Uninstall"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Command="{Binding DataContext.UninstallItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        Margin="10"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Loading Overlay -->
        <Grid Grid.Row="3"
              Background="#AA000000"
              Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <TextBlock Text="â³"
                           FontSize="48"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
                <TextBlock Text="Loading library..."
                           FontSize="18"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
