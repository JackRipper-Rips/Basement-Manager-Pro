<UserControl x:Class="SolusManifestApp.Views.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:SolusManifestApp.Converters">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,30">
            <TextBlock Text="Settings"
                       FontSize="32"
                       FontWeight="Bold"
                       Foreground="{DynamicResource TextPrimaryBrush}"/>
            <TextBlock Text=" *"
                       FontSize="32"
                       FontWeight="Bold"
                       Foreground="{DynamicResource AccentBrush}"
                       Visibility="{Binding HasUnsavedChanges, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        </StackPanel>

        <!-- Tabbed Settings -->
        <TabControl Grid.Row="1"
                    Background="Transparent"
                    BorderThickness="0"
                    Margin="0,0,0,20">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border"
                                        Background="{DynamicResource SecondaryDarkBrush}"
                                        BorderThickness="0"
                                        CornerRadius="8,8,0,0"
                                        Padding="20,10"
                                        Margin="0,0,5,0">
                                    <ContentPresenter ContentSource="Header"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Style>
            </TabControl.Resources>

            <!-- TAB 1: General -->
            <TabItem Header="General">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel MaxWidth="800" HorizontalAlignment="Left" Margin="0,20,0,0">

                        <!-- Store Provider Selection -->
                        <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Store Provider"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,0,15"/>

                                <TextBlock Text="Select which store API to use"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           Margin="0,0,0,5"/>

                                <ComboBox SelectedValue="{Binding SelectedStore}"
                                          SelectedValuePath="Tag"
                                          FontSize="14"
                                          Margin="0,0,0,0">
                                    <ComboBoxItem Content="Basement (Default)" Tag="Basement"/>
                                    <ComboBoxItem Content="Morrenus (Original)" Tag="Morrenus"/>
                                </ComboBox>

                            </StackPanel>
                        </Border>

                        <!-- Basement API Configuration -->
                        <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,20" Visibility="{Binding IsBasementSelected, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <TextBlock Text="Basement API Key"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,0,15"/>

                                <TextBlock Text="Basement API Key"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           Margin="0,0,0,5"/>
                                <TextBlock TextWrapping="Wrap"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           FontSize="11"
                                           Margin="0,0,0,10">
                                    <Run Text="How to get your Basement API key:"/>
                                    <LineBreak/>
                                    <Run Text="1. Go to "/>
                                    <Hyperlink NavigateUri="http://steamgames.freeddns.org:8881"
                                               RequestNavigate="Hyperlink_RequestNavigate">
                                        <Run Text="http://steamgames.freeddns.org:8881"/>
                                    </Hyperlink>
                                    <Run Text=" and login with your Discord account"/>
                                    <LineBreak/>
                                    <Run Text="2. Generate an API key from your Basement server dashboard"/>
                                    <LineBreak/>
                                    <Run Text="3. Paste the API key below and click Validate"/>
                                    <LineBreak/>
                                    <Run Text="4. Enjoy your downloads. (You must be in The Basement Discord)"/>
                                </TextBlock>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox Grid.Column="0"
                                             Text="{Binding BasementApiKey, UpdateSourceTrigger=PropertyChanged}"
                                             Margin="0,0,10,0"/>
                                    <Button Grid.Column="1"
                                            Content="Validate"
                                            Command="{Binding ValidateBasementApiKeyCommand}"
                                            Padding="20,8"/>
                                </Grid>

                                <TextBlock Text="{Binding StatusMessage}"
                                           Foreground="{DynamicResource AccentBrush}"
                                           FontSize="12"
                                           Margin="0,5,0,0"/>
                                <CheckBox Content="Automatically upload new config keys to Basement (helps improve your server's database)"
                                          IsChecked="{Binding BasementAutoUploadConfigKeys}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                          Margin="0,15,0,0"
                                          ToolTip="Extracts depot keys from your Steam config.vdf and uploads only new keys that don't already exist on the Basement server. Runs automatically every hour while the app is open. Requires a valid API key."/>

                            </StackPanel>
                        </Border>

                        <!-- Morrenus API Configuration -->
                        <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,20" Visibility="{Binding IsMorrenusSelected, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <TextBlock Text="Morrenus API Key"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,0,15"/>

                                <TextBlock Text="Morrenus API Key (must start with 'smm')"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           Margin="0,0,0,5"/>
                                <TextBlock TextWrapping="Wrap"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           FontSize="11"
                                           Margin="0,0,0,10">
                                    <Run Text="How to get your Morrenus API key:"/>
                                    <LineBreak/>
                                    <Run Text="1. Go to "/>
                                    <Hyperlink NavigateUri="https://manifest.morrenus.xyz/"
                                               RequestNavigate="Hyperlink_RequestNavigate">
                                        <Run Text="https://manifest.morrenus.xyz/"/>
                                    </Hyperlink>
                                    <Run Text=" and login with your Discord account"/>
                                    <LineBreak/>
                                    <Run Text="2. Generate your API key: Visit "/>
                                    <Hyperlink NavigateUri="https://manifest.morrenus.xyz/api-keys/user"
                                               RequestNavigate="Hyperlink_RequestNavigate">
                                        <Run Text="https://manifest.morrenus.xyz/api-keys/user"/>
                                    </Hyperlink>
                                    <LineBreak/>
                                    <Run Text="3. View pricing: "/>
                                    <Hyperlink NavigateUri="https://manifest.morrenus.xyz/pricing"
                                               RequestNavigate="Hyperlink_RequestNavigate">
                                        <Run Text="https://manifest.morrenus.xyz/pricing"/>
                                    </Hyperlink>
                                    <LineBreak/>
                                    <Run Text="4. Read the docs: Check the API documentation on the website"/>
                                </TextBlock>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox Grid.Column="0"
                                             Text="{Binding ApiKey, UpdateSourceTrigger=PropertyChanged}"
                                             Margin="0,0,10,0"/>
                                    <Button Grid.Column="1"
                                            Content="Validate"
                                            Command="{Binding ValidateApiKeyCommand}"
                                            Padding="20,8"/>
                                </Grid>

                                <TextBlock Text="{Binding StatusMessage}"
                                           Foreground="{DynamicResource AccentBrush}"
                                           FontSize="12"
                                           Margin="0,5,0,0"/>
                                <CheckBox Content="Automatically upload new config keys to Morrenus (helps improve the database)"
                                          IsChecked="{Binding AutoUploadConfigKeys}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                          Margin="0,15,0,0"
                                          ToolTip="Extracts depot keys from your Steam config.vdf and uploads only new keys that don't already exist on the server. Runs automatically every hour while the app is open. Requires a valid API key."/>

                            </StackPanel>
                        </Border>

                        <!-- Theme & Appearance -->
                        <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Theme &amp; Appearance"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,0,15"/>

                                <TextBlock Text="Color Theme"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           Margin="0,0,0,5"/>
                                <ComboBox SelectedValue="{Binding SelectedThemeName}"
                                          SelectedValuePath="Tag"
                                          FontSize="14"
                                          Padding="10,8"
                                          Margin="0,0,0,15">
                                    <ComboBoxItem Content="Default (Steam-like)" Tag="Default"/>
                                    <ComboBoxItem Content="Nord" Tag="Nord"/>
                                    <ComboBoxItem Content="Aurora" Tag="Aurora"/>
                                    <ComboBoxItem Content="Ocean" Tag="Ocean"/>
                                    <ComboBoxItem Content="Ocean 2" Tag="Ocean2"/>
                                    <ComboBoxItem Content="Sapphire Blue" Tag="Sapphireblue"/>
                                    <ComboBoxItem Content="Glacier" Tag="Glacier"/>
                                    <ComboBoxItem Content="Deep Space" Tag="Deepspace"/>
                                    <ComboBoxItem Content="Dark" Tag="Dark"/>
                                    <ComboBoxItem Content="Volcanic Ash" Tag="Volcanicash"/>
                                    <ComboBoxItem Content="Cherry" Tag="Cherry"/>
                                    <ComboBoxItem Content="Ruby Red" Tag="Rubyred"/>
                                    <ComboBoxItem Content="Forest" Tag="Forest"/>
                                    <ComboBoxItem Content="Emerald Isle" Tag="Emeraldisle"/>
                                    <ComboBoxItem Content="Toxic Slime" Tag="Toxicslime"/>
                                    <ComboBoxItem Content="Matrix" Tag="Matrix"/>
                                    <ComboBoxItem Content="Grape" Tag="Grape"/>
                                    <ComboBoxItem Content="Violet" Tag="Violet"/>
                                    <ComboBoxItem Content="Amethyst" Tag="Amethyst"/>
                                    <ComboBoxItem Content="Bubblegum Pop" Tag="Bubblegumpop"/>
                                    <ComboBoxItem Content="Dracula" Tag="Dracula"/>
                                    <ComboBoxItem Content="Sunset" Tag="Sunset"/>
                                    <ComboBoxItem Content="Cyberpunk" Tag="Cyberpunk"/>
                                    <ComboBoxItem Content="Synthwave" Tag="Synthwave"/>
                                    <ComboBoxItem Content="80s Vaporwave" Tag="Vaporwave"/>
                                    <ComboBoxItem Content="Midnight" Tag="Midnight"/>
                                    <ComboBoxItem Content="RoseGold" Tag="RoseGold"/>
                                    <ComboBoxItem Content="Espresso" Tag="Espresso"/>
                                    <ComboBoxItem Content="Coffee House" Tag="Coffeehouse"/>
                                    <ComboBoxItem Content="DesertSand" Tag="DesertSand"/>
                                    <ComboBoxItem Content="Rustic" Tag="Rustic"/>
                                    <ComboBoxItem Content="Golden Hour" Tag="Goldenhour"/>
                                    <ComboBoxItem Content="Solar" Tag="Solar"/>
                                    <ComboBoxItem Content="Light" Tag="Light"/>
                                    <ComboBoxItem Content="Paper" Tag="Paper"/>
                                    <ComboBoxItem Content="Zen Garden" Tag="Zengarden"/>
                                </ComboBox>

                                <TextBlock Text="Store Page Size (games per page)"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           Margin="0,0,0,5"/>
                                <ComboBox SelectedValue="{Binding StorePageSize}"
                                          SelectedValuePath="Tag"
                                          FontSize="14"
                                          Padding="10,8"
                                          Margin="0,0,0,10">
                                    <ComboBoxItem Content="10 games" Tag="10"/>
                                    <ComboBoxItem Content="20 games (default)" Tag="20"/>
                                    <ComboBoxItem Content="30 games" Tag="30"/>
                                    <ComboBoxItem Content="50 games" Tag="50"/>
                                    <ComboBoxItem Content="100 games" Tag="100"/>
                                </ComboBox>

                                <TextBlock Text="Library Page Size (items per page)"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           Margin="0,0,0,5"/>
                                <ComboBox SelectedValue="{Binding LibraryPageSize}"
                                          SelectedValuePath="Tag"
                                          FontSize="14"
                                          Padding="10,8"
                                          Margin="0,0,0,10">
                                    <ComboBoxItem Content="10 items" Tag="10"/>
                                    <ComboBoxItem Content="20 items (default)" Tag="20"/>
                                    <ComboBoxItem Content="50 items" Tag="50"/>
                                    <ComboBoxItem Content="100 items" Tag="100"/>
                                    <ComboBoxItem Content="Show all (no pagination)" Tag="0"/>
                                </ComboBox>

                                <TextBlock Text="Store Autocomplete Suggestions Limit"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           Margin="0,0,0,5"/>
                                <ComboBox SelectedValue="{Binding StoreSuggestionLimit}"
                                          SelectedValuePath="Tag"
                                          FontSize="14"
                                          Padding="10,8"
                                          Margin="0,0,0,10">
                                    <ComboBoxItem Content="5 suggestions" Tag="5"/>
                                    <ComboBoxItem Content="10 suggestions" Tag="10"/>
                                    <ComboBoxItem Content="15 suggestions (default)" Tag="15"/>
                                    <ComboBoxItem Content="20 suggestions" Tag="20"/>
                                    <ComboBoxItem Content="30 suggestions" Tag="30"/>
                                    <ComboBoxItem Content="50 suggestions" Tag="50"/>
                                </ComboBox>

                                <TextBlock Text="Theme changes will be applied when you save settings"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           FontSize="11"
                                           FontStyle="Italic"
                                           Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Disable Update Mode Selection -->
                        <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Disable Update Mode"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,0,15"/>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <RadioButton Content="Steamtools 64bit"
                                                IsChecked="{Binding IsSteamtools64bitMode}"
                                                Foreground="{DynamicResource TextPrimaryBrush}"
                                                FontSize="14"
                                                Margin="0,0,30,0"
                                                ToolTip="Modern 64-bit mode - disables updates by commenting addappid lines with keys"/>
                                    <RadioButton Content="Legacy (32bit)"
                                                IsChecked="{Binding IsLegacy32bitMode}"
                                                Foreground="{DynamicResource TextPrimaryBrush}"
                                                FontSize="14"
                                                ToolTip="Legacy 32-bit mode - disables updates by commenting setManifestid lines"/>
                                </StackPanel>

                                <TextBlock Text="• Steamtools 64bit: Disables updates by commenting addappid lines (default)"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           FontSize="12"
                                           Margin="0,0,0,3"/>
                                <TextBlock Text="• Legacy (32bit): Disables updates by commenting setManifestid lines (old behavior)"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           FontSize="12"
                                           Margin="0,0,0,15"/>

                                <Button Content="Reset All Lua Files"
                                        Command="{Binding ResetAllLuaFilesCommand}"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        FontSize="14"
                                        Padding="20,10"
                                        HorizontalAlignment="Left"
                                        ToolTip="Remove all comment markers (--) from setManifestid and addappid lines in all lua files"/>
                            </StackPanel>
                        </Border>

                        <!-- Tool Mode Selection -->
                        <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Tool Mode"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,0,15"/>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <RadioButton Content="SteamTools"
                                                IsChecked="{Binding IsSteamToolsMode}"
                                                Foreground="{DynamicResource TextPrimaryBrush}"
                                                FontSize="14"
                                                Margin="0,0,30,0"
                                                ToolTip="Standard mode for downloading and installing games"/>
                                    <RadioButton Content="DepotDownloader"
                                                IsChecked="{Binding IsDepotDownloaderMode}"
                                                Foreground="{DynamicResource TextPrimaryBrush}"
                                                FontSize="14"
                                                ToolTip="Download actual game files using DepotDownloader with smart filtering"/>
                                </StackPanel>

                                <TextBlock Text="• SteamTools: Standard download mode"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           FontSize="12"
                                           Margin="0,0,0,3"/>
                                <TextBlock Text="• DepotDownloader: Download actual game files with smart language/platform filtering"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           FontSize="12"/>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- TAB 2: SteamTools (only visible when SteamTools mode selected) -->
            <TabItem Header="SteamTools">
                <TabItem.Style>
                    <Style TargetType="TabItem" BasedOn="{StaticResource {x:Type TabItem}}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsSteamToolsMode}" Value="False">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TabItem.Style>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel MaxWidth="800" HorizontalAlignment="Left" Margin="0,20,0,0">
                        <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="SteamTools Configuration"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,0,15"/>
                                <TextBlock Text="SteamTools mode is the standard download and installation mode."
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- TAB 3: DepotDownloader (only visible when DepotDownloader mode selected) -->
            <TabItem Header="DepotDownloader">
                <TabItem.Style>
                    <Style TargetType="TabItem" BasedOn="{StaticResource {x:Type TabItem}}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsDepotDownloaderMode}" Value="False">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TabItem.Style>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel MaxWidth="800" HorizontalAlignment="Left" Margin="0,20,0,0">

                        <!-- Output Configuration -->
                        <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Download Configuration"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,0,15"/>

                                <TextBlock Text="Output Folder"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           Margin="0,0,0,5"/>
                                <Grid Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox Grid.Column="0"
                                             Text="{Binding DepotDownloaderOutputPath, UpdateSourceTrigger=PropertyChanged}"
                                             IsReadOnly="True"
                                             Margin="0,0,10,0"/>
                                    <Button Grid.Column="1"
                                            Content="Browse"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Command="{Binding BrowseDepotOutputPathCommand}"
                                            Padding="20,8"/>
                                </Grid>

                                <CheckBox Content="Verify files after download"
                                          IsChecked="{Binding VerifyFilesAfterDownload}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                          Margin="0,0,0,10"
                                          ToolTip="Verify downloaded files against manifest checksums"/>

                                <TextBlock Text="Max Concurrent Downloads"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           Margin="0,0,0,5"/>
                                <ComboBox SelectedValue="{Binding MaxConcurrentDownloads}"
                                          SelectedValuePath="Tag"
                                          FontSize="14"
                                          Padding="10,8"
                                          Margin="0,0,0,10">
                                    <ComboBoxItem Content="4 connections" Tag="4"/>
                                    <ComboBoxItem Content="8 connections (default)" Tag="8"/>
                                    <ComboBoxItem Content="16 connections" Tag="16"/>
                                    <ComboBoxItem Content="32 connections" Tag="32"/>
                                </ComboBox>

                                <TextBlock TextWrapping="Wrap"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           FontSize="12"
                                           FontStyle="Italic"
                                           Margin="0,10,0,0">
                                    DepotDownloader will download actual game files from Steam CDN servers.<LineBreak/>
                                    Downloads will be filtered by language and platform using smart filtering logic.
                                </TextBlock>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- TAB 5: Steam & Downloads -->
            <TabItem Header="Steam &amp; Downloads">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel MaxWidth="800" HorizontalAlignment="Left" Margin="0,20,0,0">

                        <!-- Steam Configuration -->
                        <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Steam Configuration"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,0,15"/>

                                <TextBlock Text="Steam Installation Path"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           Margin="0,0,0,5"/>
                                <Grid Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox Grid.Column="0"
                                             Text="{Binding SteamPath, UpdateSourceTrigger=PropertyChanged}"
                                             IsReadOnly="True"
                                             Margin="0,0,10,0"/>
                                    <Button Grid.Column="1"
                                            Content="Browse"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Command="{Binding BrowseSteamPathCommand}"
                                            Padding="20,8"
                                            Margin="0,0,10,0"/>
                                    <Button Grid.Column="2"
                                            Content="Auto-Detect"
                                            Command="{Binding DetectSteamCommand}"
                                            Padding="20,8"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Downloads -->
                        <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Downloads"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,0,15"/>

                                <TextBlock Text="Downloads Folder"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           Margin="0,0,0,5"/>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox Grid.Column="0"
                                             Text="{Binding DownloadsPath, UpdateSourceTrigger=PropertyChanged}"
                                             IsReadOnly="True"
                                             Margin="0,0,10,0"/>
                                    <Button Grid.Column="1"
                                            Content="Browse"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Command="{Binding BrowseDownloadsPathCommand}"
                                            Padding="20,8"/>
                                </Grid>

                                <CheckBox Content="Auto-install after download completes"
                                          IsChecked="{Binding AutoInstallAfterDownload}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                          ToolTip="Automatically install games after they finish downloading"/>

                                <CheckBox Content="Delete ZIP file after installation"
                                          IsChecked="{Binding DeleteZipAfterInstall}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                          ToolTip="Automatically delete the downloaded ZIP file after successful installation"/>
                            </StackPanel>
                        </Border>

                        <!-- Fix Installer Configuration -->
                        <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Fix Installer"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,0,15"/>

                                <TextBlock Text="Fix Base URL"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           Margin="0,0,0,5"/>
                                <TextBox Text="{Binding FixBaseUrl, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="10,8"
                                         FontSize="14"
                                         Margin="0,0,0,10"/>

                                <TextBlock TextWrapping="Wrap"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           FontSize="12"
                                           FontStyle="Italic">
                                    Use {appid} as a placeholder for the Steam App ID in the URL.<LineBreak/>
                                    Example: https://example.com/fixes/{appid}.zip<LineBreak/>
                                    The {appid} will be replaced with the actual App ID when checking or downloading fixes.
                                </TextBlock>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>


            <!-- TAB 6: Advanced Tools -->
            <TabItem Header="Advanced Tools">
                <TabControl Background="Transparent" BorderThickness="0" Margin="0,10,0,0">
                    <TabControl.Resources>
                        <Style TargetType="TabItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TabItem">
                                        <Border Name="Border"
                                                Background="{DynamicResource SecondaryDarkBrush}"
                                                BorderThickness="0"
                                                CornerRadius="8,8,0,0"
                                                Padding="20,10"
                                                Margin="0,0,5,0">
                                            <ContentPresenter ContentSource="Header"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                        </Style>
                    </TabControl.Resources>

                    <!-- Config VDF Extractor Sub-Tab -->
                    <TabItem Header="Config VDF Extractor">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel MaxWidth="800" HorizontalAlignment="Left" Margin="0,20,0,0">
                                <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,20">
                                    <StackPanel>
                                        <TextBlock Text="Config VDF Key Extraction"
                                                   FontSize="20"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                                   Margin="0,0,0,15"/>

                                        <TextBlock Text="Config.vdf File Path"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   Margin="0,0,0,5"/>
                                        <Grid Margin="0,0,0,15">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox Text="{Binding ConfigVdfPath, UpdateSourceTrigger=PropertyChanged}"
                                                     Grid.Column="0"
                                                     Margin="0,0,10,0"/>
                                            <Button Content="Browse..."
                                                    Grid.Column="1"
                                                    Command="{Binding BrowseConfigVdfCommand}"
                                                    Style="{StaticResource SecondaryButtonStyle}"
                                                    Padding="15,8"/>
                                        </Grid>

                                        <TextBlock Text="Combinedkeys.key File Path"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   Margin="0,0,0,5"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox Text="{Binding CombinedKeysPath, UpdateSourceTrigger=PropertyChanged}"
                                                     Grid.Column="0"
                                                     Margin="0,0,10,0"/>
                                            <Button Content="Browse..."
                                                    Grid.Column="1"
                                                    Command="{Binding BrowseCombinedKeysCommand}"
                                                    Style="{StaticResource SecondaryButtonStyle}"
                                                    Padding="15,8"/>
                                        </Grid>

                                        <TextBlock TextWrapping="Wrap"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   FontSize="12"
                                                   FontStyle="Italic"
                                                   Margin="0,10,0,0">
                                            These paths are used for extracting depot keys from your Steam config.vdf file.<LineBreak/>
                                            The combinedkeys.key file is optional and used to filter out already-known keys.
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>

                    <!-- GBE Token Generator Sub-Tab -->
                    <TabItem Header="GBE Token Generator">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel MaxWidth="800" HorizontalAlignment="Left" Margin="0,20,0,0">
                                <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,20">
                                    <StackPanel>
                                        <TextBlock Text="GBE Token Generator"
                                                   FontSize="20"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                                   Margin="0,0,0,15"/>

                                        <TextBlock Text="Steam Web API Key"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   Margin="0,0,0,5"/>
                                        <TextBox Text="{Binding GBESteamWebApiKey, UpdateSourceTrigger=PropertyChanged}"
                                                 Margin="0,0,0,5"/>
                                        <TextBlock TextWrapping="Wrap"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   FontSize="11"
                                                   Margin="0,0,0,15">
                                            Get your Steam Web API key at: <Hyperlink NavigateUri="https://steamcommunity.com/dev/apikey"
                                                                                       RequestNavigate="Hyperlink_RequestNavigate"
                                                                                       Foreground="{DynamicResource AccentBrush}">
                                                https://steamcommunity.com/dev/apikey
                                            </Hyperlink>
                                        </TextBlock>

                                        <TextBlock Text="Default Output Path"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   Margin="0,0,0,5"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBox Grid.Column="0"
                                                     Text="{Binding GBETokenOutputPath, UpdateSourceTrigger=PropertyChanged}"
                                                     IsReadOnly="True"
                                                     Margin="0,0,10,0"/>
                                            <Button Grid.Column="1"
                                                    Content="Browse"
                                                    Style="{StaticResource SecondaryButtonStyle}"
                                                    Command="{Binding BrowseGBEOutputPathCommand}"
                                                    Padding="20,8"/>
                                        </Grid>

                                        <TextBlock TextWrapping="Wrap"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   FontSize="12"
                                                   FontStyle="Italic"
                                                   Margin="0,10,0,0">
                                            The GBE Token Generator creates Goldberg Emulator configuration files.<LineBreak/>
                                            Requires Steam to be running and the game to be owned by your logged-in account.
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>

                </TabControl>
            </TabItem>

            <!-- TAB 7: System -->
            <TabItem Header="System">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel MaxWidth="800" HorizontalAlignment="Left" Margin="0,20,0,0">

                        <!-- Application Behavior -->
                        <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Application Behavior"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,0,15"/>

                                <CheckBox Content="Disable ALL notifications, popups, and toasts"
                                          IsChecked="{Binding DisableAllNotifications}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                          Margin="0,0,0,10"
                                          FontWeight="SemiBold"
                                          ToolTip="Completely disables all notifications, message boxes, and toast popups throughout the app"/>

                                <CheckBox Content="Minimize to system tray"
                                          IsChecked="{Binding MinimizeToTray}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                          Margin="0,0,0,10"
                                          ToolTip="When clicking the X button, hide to system tray instead of closing the app"/>

                                <CheckBox Content="Start minimized to tray"
                                          IsChecked="{Binding StartMinimized}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                          Margin="0,0,0,10"
                                          ToolTip="Start the application minimized to system tray on launch"/>

                                <CheckBox Content="Show notifications"
                                          IsChecked="{Binding ShowNotifications}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                          Margin="0,0,0,10"
                                          ToolTip="Show Windows toast notifications (when OFF, uses traditional message boxes)"/>

                                <CheckBox Content="Show 'game added' notification"
                                          IsChecked="{Binding ShowGameAddedNotification}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                          Margin="0,0,0,10"
                                          ToolTip="Show notification when games are successfully added to library (disable to avoid repetitive popups)"/>

                                <CheckBox Content="Confirm before deleting files"
                                          IsChecked="{Binding ConfirmBeforeDelete}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                          Margin="0,0,0,10"
                                          ToolTip="Show confirmation dialog before deleting downloaded files"/>

                                <CheckBox Content="Confirm before uninstalling games"
                                          IsChecked="{Binding ConfirmBeforeUninstall}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                          Margin="0,0,0,10"
                                          ToolTip="Show confirmation dialog before uninstalling games"/>

                                <CheckBox Content="Always show tray icon (even when window is open)"
                                          IsChecked="{Binding AlwaysShowTrayIcon}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                          ToolTip="Keep the system tray icon visible at all times (disabled by default)"/>
                            </StackPanel>
                        </Border>

                        <!-- Auto-Update -->
                        <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Auto-Update"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,0,15"/>

                                <TextBlock Text="Update Mode"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           Margin="0,0,0,5"/>
                                <ComboBox SelectedValue="{Binding SelectedAutoUpdateMode}"
                                          SelectedValuePath="Tag"
                                          FontSize="14"
                                          Padding="10,8"
                                          Margin="0,0,0,15">
                                    <ComboBoxItem Content="Disabled" Tag="Disabled"/>
                                    <ComboBoxItem Content="Check Only (Notify me)" Tag="CheckOnly"/>
                                    <ComboBoxItem Content="Auto Download &amp; Install" Tag="AutoDownloadAndInstall"/>
                                </ComboBox>

                                <TextBlock Text="• Disabled: Never check for updates"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           FontSize="12"
                                           Margin="0,0,0,3"/>
                                <TextBlock Text="• Check Only: Notify when updates are available and ask permission to install"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           FontSize="12"
                                           Margin="0,0,0,3"/>
                                <TextBlock Text="• Auto Download &amp; Install: Automatically download and install updates without asking"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           FontSize="12"
                                           Margin="0,0,0,15"/>

                                <TextBlock Foreground="{DynamicResource TextSecondaryBrush}"
                                           Margin="0,0,0,10">
                                    <Run Text="Current Version: "/>
                                    <Run Text="{Binding CurrentVersion, Mode=OneWay}"/>
                                </TextBlock>

                                <Button Content="Check for Updates Now"
                                        Command="{Binding CheckForUpdatesCommand}"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Padding="20,10"
                                        HorizontalAlignment="Left"/>
                            </StackPanel>
                        </Border>

                        <!-- Maintenance -->
                        <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Maintenance"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,0,15"/>

                                <TextBlock Text="{Binding GetCacheSizeFormatted(), StringFormat='Current cache size: {0}'}"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           Margin="0,0,0,10"/>

                                <Button Content="Clear Cache"
                                        Command="{Binding ClearCacheCommand}"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Padding="20,10"
                                        HorizontalAlignment="Left"
                                        Margin="0,0,0,10"/>

                                <TextBlock Text="Clears all cached game icons and API data"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           FontSize="12"
                                           FontStyle="Italic"
                                           Margin="0,0,0,20"/>

                                <Button Content="Clear Old Logs"
                                        Command="{Binding ClearLogsCommand}"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Padding="20,10"
                                        HorizontalAlignment="Left"
                                        Margin="0,0,0,10"/>

                                <TextBlock Text="Deletes all old log files (except current session)"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           FontSize="12"
                                           FontStyle="Italic"/>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>

        </TabControl>

        <!-- Fixed Save Button at Bottom -->
        <Border Grid.Row="2"
                Background="{DynamicResource CardBackgroundBrush}"
                BorderThickness="0,1,0,0"
                BorderBrush="{DynamicResource BorderBrush}"
                Padding="0,15,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Padding="40,12"
                        Command="{Binding SaveSettingsCommand}"
                        FontSize="16"
                        FontWeight="SemiBold">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="💾 Save Settings"/>
                        <TextBlock Text=" *"
                                   Foreground="White"
                                   FontWeight="Bold"
                                   Margin="5,0,0,0"
                                   Visibility="{Binding HasUnsavedChanges, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </StackPanel>
                </Button>
                <TextBlock Text="{Binding StatusMessage}"
                           Foreground="{DynamicResource AccentBrush}"
                           VerticalAlignment="Center"
                           Margin="20,0,0,0"
                           FontSize="14"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
